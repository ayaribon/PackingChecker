<div class="container mx-auto px-4">
  <h1 class="text-2xl font-semibold mb-4">タスク一覧</h1>

  <table class="min-w-full bg-white border border-gray-200">
    <thead class="bg-gray-100">
      <tr>
        <th class="py-3 px-6 text-left">タイトル</th>
        <th class="py-3 px-6 text-left">内容</th>
        <th class="py-3 px-6 text-left">ステータス</th>
        <th class="py-3 px-6 text-left">荷物</th>
        <th class="py-3 px-6 text-left">作成日</th>
        <th class="py-3 px-6 text-left">更新日</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr class="border-b border-gray-200 hover:bg-gray-50">
          <td class="py-3 px-6 text-gray-700"><%= task.title %></td>
          <td class="py-3 px-6 text-gray-700"><%= task.body %></td>
          <td class="py-3 px-6 text-gray-700"><%= task.status %></td>
          <td class="py-3 px-6 text-gray-700"><%= task.baggage %></td>
          <td class="py-3 px-6 text-gray-700"><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="py-3 px-6 text-gray-700"><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= paginate @tasks %>
  </div>
</div>
