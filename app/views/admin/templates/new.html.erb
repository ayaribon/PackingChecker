<div class="max-w-4xl mx-auto py-10">
  <h1 class="text-2xl font-bold mb-8">新しいテンプレートを作成</h1>

  <%= form_with(model: @template, url: admin_templates_path, local: true, class: "space-y-6") do |f| %>

    <div>
      <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm h-12", required: true %>
    </div>

    <div>
      <%= f.label :country, "国", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :country, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm h-12" %>
    </div>

    <div>
      <%= f.label :note, "メモ", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :note, rows: 5, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm h-16" %>
    </div>

    <div class="flex items-start">
      <div class="flex items-center h-5">
        <%= f.check_box :public, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
      </div>
      <div class="ml-3 text-sm">
        <label for="public" class="font-medium text-gray-700">公開する</label>
        <p class="text-gray-500">このテンプレートを他のユーザーが使えるように公開します。</p>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit "テンプレートを作成", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

  <% end %>
</div>
